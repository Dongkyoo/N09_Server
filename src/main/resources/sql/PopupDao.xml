<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 맵핑될 DAO 인터페이스의 Full name 을 줍니다. -->
<mapper namespace="kr.co.m_n09.daos.PopupDao">

    <sql id="column">
        ID id,
        NAME name,
        IMAGE_URL imageUrl,
        LINK_URL linkUrl,
        SERVICE_ID serviceId
    </sql>

    <insert id="createPopup" parameterType="Popup">
        INSERT INTO tbl_popups
        VALUES (
            #{id},
            #{name},
            #{imageUrl},
            #{linkUrl},
            #{serviceId}
        )

        <selectKey resultType="int" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="selectPopupListByServiceId" resultType="Popup">
        SELECT <include refid="column"/>
        FROM tbl_popups
        WHERE service_id = #{serviceId}
    </select>

    <select id="selectPopupById" resultType="Popup">
        SELECT <include refid="column"/>
        FROM tbl_popups
        WHERE id = #{id}
    </select>

</mapper>
